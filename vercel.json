{
  "builds": [
    {
      "src": "scanner.js",
      "use": "@vercel/static-build",
      "buildCommand": "npm run build:scanner"
    }
  ],
  "build": {
    "env": {
      "WEB_APP_URL": "$NEXT_PUBLIC_WEB_APP_URL"
    }
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}